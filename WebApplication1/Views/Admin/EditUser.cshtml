@model UserViewModel
@using System.Text.Json
@{
    ViewData["Title"] = "Kullanıcı Düzenle";
}

<h2 class="mb-4"><i class="fas fa-user-edit me-2"></i> Kullanıcı Düzenle</h2>

<form asp-action="EditUser" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger small"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Role" class="form-label"></label>
        <select asp-for="Role" class="form-select">
            <option value="">-- Rol Seçiniz --</option>
            <option value="User">User</option>
            <option value="Admin">Admin</option>
        </select>
        <span asp-validation-for="Role" class="text-danger small"></span>
    </div>

    <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-save me-1"></i> Güncelle
        </button>
        <a asp-action="Users" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i> Vazgeç
        </a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}